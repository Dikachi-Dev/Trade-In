@page
@model TradeIn.Pages.ResultModel
@{
}

<div style="padding: 30px; text-align: center">

	<div class="row justify-content-center" id="GFG">
		<div style="padding: 10px 0px 20px 0px; float:right">
			<button onclick="printDiv()" class=" btn btn-lg btn-primary">Print<i class="fa fa-print"></i></button>
		</div>
		

		<div class="col-lg-3" style="text-align: center;">
			@if(Model.estimate.Category == "Laptop")
			{
				<img class="card-img-top resp" src="~/Laptops.png" alt="Card image cap">
				<h3>Laptop</h3>
				<p>@TradeIn.Models.Helper.getBrand(Model.estimate.Brand) ,  @TradeIn.Models.Helper.getModel(Model.estimate.Model) , @TradeIn.Models.Helper.getGen(Model.estimate.Generation) </p>

			}else if(Model.estimate.Category == "Phone")
			{
					<img class="card-img-top resp" src="~/Tablets.png" alt="Card image cap">
				<h3>Phone</h3>
				<p>@TradeIn.Models.Helper.getBrand(Model.estimate.Brand) ,  @TradeIn.Models.Helper.getModel(Model.estimate.Model) </p>
			} else if(Model.estimate.Category == "Tablet")
			{
				<img class="card-img-top resp" src="~/Tablets.png" alt="Card image cap">
				<h3>Tablet</h3>
				<p>@TradeIn.Models.Helper.getBrand(Model.estimate.Brand) ,  @TradeIn.Models.Helper.getModel(Model.estimate.Model)  </p>
			} else{
				<img class="card-img-top resp" src="~/Others.png" alt="Card image cap">
				<h3>Watch</h3>
				<p>@TradeIn.Models.Helper.getBrand(Model.estimate.Brand) ,  @TradeIn.Models.Helper.getModel(Model.estimate.Model)  </p>

			}
		</div>
		<div class="col-lg-9">
			<div class="card">
				<div class="card-header" style="background-color: lightgreen; color: black;">
					<h3>Your trade in estimate</h3>
				</div>
				<div class="card-body">
					<h5>£@Html.DisplayFor(model => model.estimate.Amount)</h5>
					<h5>Date of Estimate: @Html.DisplayFor(model => model.estimate.Estimatedate)</h5>
					<h5>Reference number: <br /> @Html.DisplayFor(model => model.estimate.Refnumber)</h5>
				</div>
			</div>
			
		</div>
		
	</div>
	<div class="row">
		<div class="col-lg-3"></div>
		<div class="col-lg-9">
			<div class="row">
				<h3><b>What happens next?</b></h3>
				<div class="col-md-6" style="display:block;">
					<h4><b>Visit our store</b></h4>
					<ul>
						<li>Print your trade-in estimate and bring it to store. If you don't own a printer you can just show us your estimate in person. We'll handle the rest</li>
						<li>Don't forget to bring in your old device. We'll process your trade-in payment there and then.</li>
						<li>Your payment will be in the form of a Gift Card, which you can redeem in-store immediately.</li>
					</ul>
				</div>
				<div class="col-md-6">
					<h4><b>Complete your trade in online</b></h4>
					<ul>
						<li>Send your device to us</li>
						<li>Your trade-in will be looked at and processed the day we receive it.</li>
						<li>Your payment will be processed and transferred to your bank account within 3-5 working days</li>
					</ul>
					<button class="btn btn-primary"><a asp-area="" asp-page="/User_Detail" style="color: white;">Proceed</a></button>
				</div>
			</div>
		</div>
	</div>

</div>
@section Scripts{

<script>

	function printDiv() {

		var divContents = document.getElementById("GFG").innerHTML;

		var a = window.open('', '', 'height=500, width=500');	

		a.document.write(divContents);
		a.document.close();

		a.print();
	}

</script>
}
